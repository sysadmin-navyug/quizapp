<div class="text_content" style="text-align:center;">
	<h4>Enter a new question below:-</h4>

	<%= form_tag( :controller => 'admin', :action => 'create', :method=>'post') do %>
	  <%= label_tag("Question : ") %>
	  <%= text_field(:quiz, 'question') %> <br/><br/>
	  <%= label_tag("Option A : ") %>
	  <%= text_field(:quiz, 'option_a') %> <br/><br/>
	  <%= label_tag("Option B : ") %>
	  <%= text_field(:quiz, 'option_b') %> <br/><br/>
	  <%= label_tag("Option C : ") %>
	  <%= text_field(:quiz, 'option_c') %> <br/><br/>
	  <%= label_tag("Option D : ") %>
	  <%= text_field(:quiz, 'option_d') %> <br/><br/>
	  <%= label_tag("Answer : ") %>
	  <%= text_field(:quiz, 'answer') %> <br/><br/>
	  <%= submit_tag( 'Add Question' ) %>
	<% end %>
		<button onclick="window.location.href='/hangman'" style="position:fixed;right:4em;top:4em;float:right;">Exit</button>
	<br/>
	<%= button_to "Download Source", :type=>"application/zip", :x_sendfile=>true, :action=>'download' %>
	<pre>#Note : Please update the total questions variable
      in initNow method of Hangman Controller.</pre>
</div>